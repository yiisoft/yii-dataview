{
    "name": "yiisoft/yii-dataview",
    "type": "library",
    "description": "Yii Framework Data Widgets Package",
    "keywords": [
        "yii",
        "view",
        "data",
        "widget",
        "list",
        "grid"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/yiisoft/yii-dataview",
        "issues": "https://github.com/yiisoft/yii-dataview/issues",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "yiisoft/aliases": "^1.0",
        "yiisoft/arrays": "^1.0",
        "yiisoft/data": "dev-add-getsort-offsetPaginator as 3.0.x-dev",
        "yiisoft/factory": "^3.0@dev",
        "yiisoft/router": "^3.0@dev",
        "yiisoft/strings": "^2.0",
        "yiisoft/translator-formatter-intl": "^3.0@dev",
        "yiisoft/translator-message-php": "^3.0@dev",
        "yiisoft/view": "^3.0@dev",
        "yiisoft/widget": "^3.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.7",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.5",
        "yiisoft/composer-config-plugin": "^1.0@dev",
        "yiisoft/di": "^3.0@dev",
        "yiisoft/event-dispatcher": "^1.0",
        "yiisoft/log": "^1.0",
        "yiisoft/router-fastroute": "^3.0@dev"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "config-plugin": {
            "web": [
                "config/web/*.php"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Yii\\DataView\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Yii\\DataView\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/terabytesoftw/data"
        }
    ]
}
